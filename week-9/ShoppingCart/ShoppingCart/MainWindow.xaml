<Window x:Class="ShoppingCart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingCart"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lbxProducts" HorizontalAlignment="Left" Height="195" Margin="31,76,0,0" VerticalAlignment="Top" Width="190"/>
        <ListBox x:Name="lbxCart" HorizontalAlignment="Left" Height="195" Margin="296,76,0,0" VerticalAlignment="Top" Width="190"/>
        <Label x:Name="label" Content="Products" HorizontalAlignment="Left" Height="32" Margin="31,39,0,0" VerticalAlignment="Top" Width="153" Foreground="#FFCF0000" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="label_Copy" Content="Cart" HorizontalAlignment="Left" Height="32" Margin="296,39,0,0" VerticalAlignment="Top" Width="153" Foreground="#FFCF0000" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnAddToCart" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="240,137,0,0" VerticalAlignment="Top" Width="40" Click="btnAddToCart_Click"/>
        <Button x:Name="btnRemoveFromCart" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="240,184,0,0" VerticalAlignment="Top" Width="40" Click="btnRemoveFromCart_Click"/>
        <Button x:Name="btnAddTax" Content="Add Tax" HorizontalAlignment="Left" Margin="31,276,0,0" VerticalAlignment="Top" Width="75" Click="btnAddTax_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="411,276,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.715,0.487" Click="btnExit_Click"/>

    </Grid>
</Window>

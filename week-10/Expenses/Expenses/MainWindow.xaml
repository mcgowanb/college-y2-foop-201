<Window x:Class="Expenses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expenses"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lbxExpenses" HorizontalAlignment="Left" Height="178" Margin="62,32,0,0" VerticalAlignment="Top" Width="294"/>
        <Button x:Name="btnAddExpense" Content="Add Expense" HorizontalAlignment="Left" Margin="62,235,0,0" VerticalAlignment="Top" Width="75" Click="btnAddExpense_Click"/>
        <Label x:Name="label" Content="Total Expenses" HorizontalAlignment="Left" Margin="176,231,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.283,-0.291"/>
        <Label x:Name="lblTotal" Content="" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="299,235,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.283,-0.291" Width="57"/>

    </Grid>
</Window>
